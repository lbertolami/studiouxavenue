---
import Layout from '../layouts/Layout.astro';

const services = [
  {
    number: "01",
    title: "UX/UI Design",
    description: "End-to-end digital product design that balances user needs with business goals. From wireframes to polished interfaces.",
    priceRange: "$3,000 — $15,000",
    tags: ["Web Apps", "Mobile", "SaaS", "E-commerce"]
  },
  {
    number: "02",
    title: "UX Audit",
    description: "Deep-dive analysis of your existing product. We identify friction points, usability issues, and opportunities for improvement.",
    priceRange: "$1,500 — $5,000",
    tags: ["Heuristic Review", "User Testing", "Analytics", "Report"]
  },
  {
    number: "03",
    title: "UX Writing",
    description: "Words that guide, inform, and delight. Microcopy, content strategy, and voice & tone that feels human.",
    priceRange: "$800 — $3,000",
    tags: ["Microcopy", "Content Strategy", "Voice & Tone", "Documentation"]
  },
  {
    number: "04",
    title: "Branding",
    description: "Visual identity systems that make your brand unmistakable. Logo, typography, color, and comprehensive guidelines.",
    priceRange: "$2,500 — $10,000",
    tags: ["Logo Design", "Visual Identity", "Brand Guidelines", "Assets"]
  }
];
---

<Layout title="Studio UX Avenue — Premium UX Design Services">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-cream/80 backdrop-blur-md border-b border-charcoal/5">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="flex items-center justify-between h-20">
        <a href="/" class="font-display font-bold text-xl tracking-tight text-charcoal">
          Studio<span class="text-orange">.</span>UX Avenue
        </a>
        <div class="hidden md:flex items-center gap-8">
          <a href="#work" class="text-sm font-medium text-gray hover:text-charcoal transition-colors orange-underline">Work</a>
          <a href="#services" class="text-sm font-medium text-gray hover:text-charcoal transition-colors orange-underline">Services</a>
          <a href="#contact" class="text-sm font-medium text-gray hover:text-charcoal transition-colors orange-underline">Contact</a>
          <a href="#contact" class="btn-primary text-sm">Start a Project</a>
        </div>
        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden p-2" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-cream border-t border-charcoal/5">
      <div class="px-6 py-4 space-y-4">
        <a href="#work" class="block text-sm font-medium text-gray hover:text-charcoal">Work</a>
        <a href="#services" class="block text-sm font-medium text-gray hover:text-charcoal">Services</a>
        <a href="#contact" class="block text-sm font-medium text-gray hover:text-charcoal">Contact</a>
        <a href="#contact" class="btn-primary text-sm inline-block">Start a Project</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center pt-20 relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute top-1/4 right-0 w-96 h-96 bg-orange/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-0 w-64 h-64 bg-orange/10 rounded-full blur-2xl"></div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 py-20 lg:py-32">
      <div class="grid lg:grid-cols-12 gap-12 items-center">
        <div class="lg:col-span-8 space-y-8">
          <!-- Eyebrow -->
          <div class="animate-fade-in-up opacity-0" style="animation-delay: 0.1s;">
            <span class="inline-flex items-center gap-2 px-4 py-2 bg-charcoal text-cream text-xs font-display font-semibold uppercase tracking-widest">
              <span class="w-2 h-2 bg-orange rounded-full"></span>
              UX Design Studio
            </span>
          </div>

          <!-- Main headline -->
          <h1 class="font-display font-extrabold leading-[0.9] tracking-tight">
            <span class="block text-5xl md:text-7xl lg:text-8xl text-charcoal animate-fade-in-up opacity-0" style="animation-delay: 0.2s;">
              Design that
            </span>
            <span class="block text-5xl md:text-7xl lg:text-8xl text-charcoal animate-fade-in-up opacity-0" style="animation-delay: 0.3s;">
              drives
            </span>
            <span class="block text-5xl md:text-7xl lg:text-8xl text-orange animate-fade-in-up opacity-0" style="animation-delay: 0.4s;">
              results.
            </span>
          </h1>

          <!-- Subheadline -->
          <p class="text-lg md:text-xl text-gray max-w-xl leading-relaxed animate-fade-in-up opacity-0" style="animation-delay: 0.5s;">
            We craft digital experiences that convert. Premium UX/UI design for brands
            that refuse to blend in.
          </p>

          <!-- CTA buttons -->
          <div class="flex flex-wrap gap-4 animate-fade-in-up opacity-0" style="animation-delay: 0.6s;">
            <a href="#services" class="btn-primary">
              View Services
            </a>
            <a href="#contact" class="btn-outline">
              Get in Touch
            </a>
          </div>
        </div>

        <!-- Right side - Stats/Social proof -->
        <div class="lg:col-span-4 animate-fade-in opacity-0" style="animation-delay: 0.8s;">
          <div class="bg-charcoal text-cream p-8 lg:p-10 relative">
            <div class="absolute top-0 right-0 w-16 h-16 border-t-4 border-r-4 border-orange"></div>
            <div class="space-y-8">
              <div>
                <div class="font-display font-extrabold text-5xl text-orange">50+</div>
                <div class="text-sm text-cream/60 mt-1">Projects Delivered</div>
              </div>
              <div class="w-full h-px bg-cream/10"></div>
              <div>
                <div class="font-display font-extrabold text-5xl text-orange">98%</div>
                <div class="text-sm text-cream/60 mt-1">Client Satisfaction</div>
              </div>
              <div class="w-full h-px bg-cream/10"></div>
              <div>
                <div class="font-display font-extrabold text-5xl text-orange">5+</div>
                <div class="text-sm text-cream/60 mt-1">Years Experience</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-12 left-1/2 -translate-x-1/2 hidden lg:block">
        <a href="#services" class="flex flex-col items-center gap-2 text-gray hover:text-charcoal transition-colors scroll-indicator">
          <span class="text-xs font-display uppercase tracking-widest">Scroll</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Work/Mockups Section -->
  <section id="work" class="py-24 lg:py-32 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <!-- Section header -->
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
        <div>
          <span class="text-orange font-display font-semibold text-sm uppercase tracking-widest">Selected Work</span>
          <h2 class="font-display font-extrabold text-4xl md:text-5xl lg:text-6xl text-charcoal mt-4 leading-tight">
            Designs that<br/>
            <span class="text-gray">speak volumes.</span>
          </h2>
        </div>
        <!-- Navigation buttons -->
        <div class="flex gap-3">
          <button id="carousel-prev" class="carousel-nav" aria-label="Previous">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <button id="carousel-next" class="carousel-nav" aria-label="Next">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Carousel container - full width -->
    <div id="mockup-carousel" class="mockup-carousel pl-6 lg:pl-12">
      <!-- Mockup 1 - Laptop -->
      <div class="mockup-item">
        <div class="device-laptop">
          <div class="screen">
            <div class="mockup-placeholder gradient-1">
              <span>Dashboard UI</span>
            </div>
          </div>
          <div class="base"></div>
        </div>
        <p class="text-center mt-4 font-display font-semibold text-charcoal">FinTech Dashboard</p>
        <p class="text-center text-sm text-gray">Web Application</p>
      </div>

      <!-- Mockup 2 - Phone -->
      <div class="mockup-item">
        <div class="device-phone">
          <div class="frame">
            <div class="notch"></div>
            <div class="screen">
              <div class="mockup-placeholder gradient-2">
                <span>Mobile App</span>
              </div>
            </div>
          </div>
        </div>
        <p class="text-center mt-4 font-display font-semibold text-charcoal">Wellness App</p>
        <p class="text-center text-sm text-gray">iOS & Android</p>
      </div>

      <!-- Mockup 3 - Laptop -->
      <div class="mockup-item">
        <div class="device-laptop">
          <div class="screen">
            <div class="mockup-placeholder gradient-3">
              <span>E-commerce</span>
            </div>
          </div>
          <div class="base"></div>
        </div>
        <p class="text-center mt-4 font-display font-semibold text-charcoal">Luxury E-commerce</p>
        <p class="text-center text-sm text-gray">Shopify Design</p>
      </div>

      <!-- Mockup 4 - Phone -->
      <div class="mockup-item">
        <div class="device-phone">
          <div class="frame">
            <div class="notch"></div>
            <div class="screen">
              <div class="mockup-placeholder gradient-4">
                <span>Food Delivery</span>
              </div>
            </div>
          </div>
        </div>
        <p class="text-center mt-4 font-display font-semibold text-charcoal">Quick Bites</p>
        <p class="text-center text-sm text-gray">Mobile App</p>
      </div>

      <!-- Mockup 5 - Laptop -->
      <div class="mockup-item">
        <div class="device-laptop">
          <div class="screen">
            <div class="mockup-placeholder gradient-5">
              <span>SaaS Platform</span>
            </div>
          </div>
          <div class="base"></div>
        </div>
        <p class="text-center mt-4 font-display font-semibold text-charcoal">Analytics Pro</p>
        <p class="text-center text-sm text-gray">SaaS Dashboard</p>
      </div>

      <!-- Mockup 6 - Phone -->
      <div class="mockup-item">
        <div class="device-phone">
          <div class="frame">
            <div class="notch"></div>
            <div class="screen">
              <div class="mockup-placeholder gradient-6">
                <span>Social App</span>
              </div>
            </div>
          </div>
        </div>
        <p class="text-center mt-4 font-display font-semibold text-charcoal">Connect</p>
        <p class="text-center text-sm text-gray">Social Platform</p>
      </div>

      <!-- Spacer for last item visibility -->
      <div class="w-6 lg:w-12 flex-shrink-0"></div>
    </div>

    <!-- View all work link -->
    <div class="max-w-7xl mx-auto px-6 lg:px-12 mt-12">
      <a href="#contact" class="inline-flex items-center gap-2 font-display font-semibold text-charcoal hover:text-orange transition-colors group">
        <span>Discuss Your Project</span>
        <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-24 lg:py-32 bg-cream">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <!-- Section header -->
      <div class="max-w-3xl mb-16 lg:mb-24">
        <span class="text-orange font-display font-semibold text-sm uppercase tracking-widest">Services & Pricing</span>
        <h2 class="font-display font-extrabold text-4xl md:text-5xl lg:text-6xl text-charcoal mt-4 leading-tight">
          Transparent pricing.<br/>
          <span class="text-gray">No surprises.</span>
        </h2>
        <p class="text-gray text-lg mt-6 leading-relaxed">
          We believe in upfront pricing. Here's what our services typically cost—so we can focus on your project, not negotiations.
        </p>
      </div>

      <!-- Services grid -->
      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
        {services.map((service, index) => (
          <article class="group bg-white p-8 lg:p-10 hover-lift corner-accent">
            <!-- Service number -->
            <span class="text-gray-light font-display font-bold text-6xl lg:text-7xl opacity-50 group-hover:opacity-100 group-hover:text-orange transition-all duration-300">
              {service.number}
            </span>

            <!-- Content -->
            <div class="mt-4 space-y-4">
              <h3 class="font-display font-bold text-2xl lg:text-3xl text-charcoal">
                {service.title}
              </h3>

              <p class="text-gray leading-relaxed">
                {service.description}
              </p>

              <!-- Price -->
              <div class="pt-4 border-t border-gray-light/50">
                <span class="text-xs font-display uppercase tracking-widest text-gray">Starting from</span>
                <div class="price-tag text-3xl lg:text-4xl mt-1">
                  {service.priceRange}
                </div>
              </div>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2 pt-4">
                {service.tags.map((tag) => (
                  <span class="px-3 py-1 bg-cream text-xs font-medium text-gray border border-gray-light">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- CTA after services -->
      <div class="mt-16 lg:mt-24 text-center">
        <p class="text-gray text-lg mb-6">Need something custom? Let's talk about your specific needs.</p>
        <a href="#contact" class="btn-primary inline-block">Request a Quote</a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-24 lg:py-32 bg-charcoal text-cream relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-orange/10 to-transparent"></div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 relative">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24">
        <!-- Left column - Text -->
        <div>
          <span class="text-orange font-display font-semibold text-sm uppercase tracking-widest">Get in Touch</span>
          <h2 class="font-display font-extrabold text-4xl md:text-5xl lg:text-6xl mt-4 leading-tight">
            Ready to start<br/>
            <span class="text-orange">your project?</span>
          </h2>
          <p class="text-cream/60 text-lg mt-6 leading-relaxed max-w-md">
            Tell us about your vision. We'll get back to you within 24 hours with a tailored proposal.
          </p>

          <div class="mt-12 space-y-6">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-charcoal-light flex items-center justify-center">
                <svg class="w-5 h-5 text-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <div class="text-xs text-cream/40 uppercase tracking-widest">Email</div>
                <a href="mailto:hello@studiouxavenue.com" class="text-cream hover:text-orange transition-colors">hello@studiouxavenue.com</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Right column - Form -->
        <div>
          <form
            action="https://formspree.io/f/mzdboqep"
            method="POST"
            class="space-y-6"
          >
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-cream/60 mb-2">Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-charcoal-light border border-cream/10 text-cream placeholder-cream/30 focus:border-orange transition-colors"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-cream/60 mb-2">Email *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-charcoal-light border border-cream/10 text-cream placeholder-cream/30 focus:border-orange transition-colors"
                  placeholder="your@email.com"
                />
              </div>
            </div>

            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="service" class="block text-sm font-medium text-cream/60 mb-2">Service Interest</label>
                <select
                  id="service"
                  name="service"
                  class="w-full px-4 py-3 bg-charcoal-light border border-cream/10 text-cream focus:border-orange transition-colors appearance-none cursor-pointer"
                  style="background-image: url('data:image/svg+xml;utf8,<svg fill=\"%23FAFAF8\" viewBox=\"0 0 24 24\" xmlns=\"http://www.w3.org/2000/svg\"><path d=\"M7 10l5 5 5-5z\"/></svg>'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.5rem;"
                >
                  <option value="">Select a service</option>
                  <option value="ux-ui">UX/UI Design</option>
                  <option value="ux-audit">UX Audit</option>
                  <option value="ux-writing">UX Writing</option>
                  <option value="branding">Branding</option>
                  <option value="multiple">Multiple Services</option>
                </select>
              </div>
              <div>
                <label for="budget" class="block text-sm font-medium text-cream/60 mb-2">Budget Range</label>
                <select
                  id="budget"
                  name="budget"
                  class="w-full px-4 py-3 bg-charcoal-light border border-cream/10 text-cream focus:border-orange transition-colors appearance-none cursor-pointer"
                  style="background-image: url('data:image/svg+xml;utf8,<svg fill=\"%23FAFAF8\" viewBox=\"0 0 24 24\" xmlns=\"http://www.w3.org/2000/svg\"><path d=\"M7 10l5 5 5-5z\"/></svg>'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.5rem;"
                >
                  <option value="">Select budget range</option>
                  <option value="under-2k">Under $2,000</option>
                  <option value="2k-5k">$2,000 - $5,000</option>
                  <option value="5k-10k">$5,000 - $10,000</option>
                  <option value="10k-plus">$10,000+</option>
                </select>
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-cream/60 mb-2">Project Details *</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-charcoal-light border border-cream/10 text-cream placeholder-cream/30 focus:border-orange transition-colors resize-none"
                placeholder="Tell us about your project, goals, and timeline..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full sm:w-auto">
              Send Message
              <svg class="inline-block w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 bg-charcoal border-t border-cream/10">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <!-- Logo -->
        <a href="/" class="font-display font-bold text-xl tracking-tight text-cream">
          Studio<span class="text-orange">.</span>UX Avenue
        </a>

        <!-- Social links -->
        <div class="flex items-center gap-6">
          <a href="#" class="text-cream/40 hover:text-orange transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" class="text-cream/40 hover:text-orange transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
